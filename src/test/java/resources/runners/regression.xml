<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="regression suite" verbose="1" >
    <groups>
        <run>
            <include name="regression"></include>
        </run>
    </groups>
    <listeners>
        <listener class-name="com.tutorialninja.customlisteners.CustomListeners"/>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
    </listeners>
    <test name="Tutorialninja Test" >
        <classes>
            <class name="com.tutorialninja.testsuite.DesktopsPageTest"/>
            <class name="com.tutorialninja.testsuite.HomePageTest"/>
            <class name="com.tutorialninja.testsuite.LaptopsAndNotebooksTest"/>
            <class name="com.tutorialninja.testsuite.MyAccountsTest"/>
        </classes>
    </test>
</suite>